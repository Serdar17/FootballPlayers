@page "/players"

@inherits PlayersBase
@layout MainLayout

<MudText Class="mt-8 mb-8" Typo="Typo.h4" Align="Align.Center">Catalog of football players</MudText>
<MudGrid Spacing="7" Justify="Justify.Center">
    
@foreach (var player in Players)
{
    <MudItem>
        <MudPaper Elevation="8">
            <MudCard Outlined="true">
                <MudCardContent>
                    <MudText Align="Align.Center" Class="mb-4 " Typo="Typo.h5">@player.Name @player.Surname</MudText>
                    <MudText Typo="Typo.body1" Class="mb-2">Gender: @player.Gender</MudText>
                    <MudText Typo="Typo.body1" Class="mb-2">Birth date: @player.BirthDate.Value.Date.ToString("dd.MM.yyyy")</MudText>
                    <MudText Typo="Typo.body1" Class="mb-2">Coutry: @player.Country</MudText>
                    <MudText Typo="Typo.body1" Class="mb-2">Team name: @player.TeamName</MudText>
                </MudCardContent>
                
                <MudCardActions Class="d-flex justify-space-between flex-grow-1 gap-4">
                    <MudButton Href=@GetLink("edit", player.Id)
                               Variant="Variant.Filled"
                               StartIcon="@Icons.Material.Filled.Edit"
                               Color="Color.Warning">Edit</MudButton>
    
                    <MudButton
                        OnClick=@(async () => await OnDeletePlayer(player.Id))
                        Variant="Variant.Filled"
                        StartIcon="@Icons.Material.Filled.Delete"
                        Color="Color.Error">Delete</MudButton>
                </MudCardActions>
            </MudCard>
        </MudPaper>
    </MudItem>
}
<MudScrollToTop>
    <MudFab Color="Color.Primary" Icon="@Icons.Material.Filled.ArrowCircleUp" />
</MudScrollToTop>

</MudGrid>

